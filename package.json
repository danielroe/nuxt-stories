{
  "name": "nuxt-stories",
  "version": "3.0.0",
  "description": "Nuxt stories module -- Painless storybooking for Nuxt",
  "author": "Richard Schloss",
  "main": "lib/module.js",
  "type": "module",
  "license": "MIT",
  "keywords": [
    "nuxt",
    "storybook",
    "stories",
    "painless"
  ],
  "contributors": [
    {
      "name": "Richard Schloss"
    }
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": "https://github.com/richardeschloss/nuxt-stories",
  "scripts": {
    "dev": "nuxi dev",
    "build": "nuxi build",
    "start": "nuxi preview",
    "generate": "npm run mkDirs && npm run cpFiles && nuxi generate --verbose",
    "mkDirs": "mkdir -p public/nuxtStories public/nuxtStories/svg",
    "cpFiles": "cp -rf stories/* public/nuxtStories && cp -rf lib/assets/svg/* public/nuxtStories/svg && cp ./README.md ./public/nuxtStories ",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "test": "ava --colors --watch --timeout=10m",
    "test:cov": "c8 ava --timeout=10m"
  },
  "files": [
    "lib"
  ],
  "imports": {
    "#root/*": "./*",
    "#app": "./test/utils/plugin.js"
  },
  "dependencies": {
    "@lokidb/fs-storage": "^2.1.0",
    "@lokidb/full-text-search": "^2.1.0",
    "@lokidb/loki": "^2.1.0",
    "bootstrap": "^5.1.3",
    "dompurify": "^2.3.3",
    "glob": "^7.2.0",
    "gray-matter": "^4.0.3",
    "highlight.js": "^11.3.1",
    "les-utils": "^2.0.4",
    "marked": "^4.0.3",
    "sass": "^1.45.1",
    "sass-loader": "^12.4.0",
    "vue-json-pretty": "^2.0.6",
    "xml2js": "^0.4.23"
  },
  "devDependencies": {
    "@nuxtjs/eslint-config": "^6.0.1",
    "ava": "^3.15.0",
    "browser-env": "^3.3.0",
    "c8": "^7.10.0",
    "eslint": "^7.32.0",
    "jsdom-global": "^3.0.2",
    "nuxt-socket-io": "^3.0.1",
    "nuxt3": "^3.0.0-27356801.e9128f3",
    "tap-json": "^1.0.0"
  }
}
