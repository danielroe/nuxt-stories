{
  "name": "nuxt-stories",
  "version": "2.5.0",
  "description": "Nuxt stories module -- Painless storybooking for Nuxt",
  "author": "Richard Schloss",
  "main": "lib/module.js",
  "type": "module",
  "license": "MIT",
  "keywords": [
    "nuxt",
    "storybook",
    "stories",
    "painless"
  ],
  "contributors": [
    {
      "name": "Richard Schloss"
    }
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": "https://github.com/richardeschloss/nuxt-stories",
  "scripts": {
    "dev": "nuxi dev",
    "build": "nuxi build",
    "start": "nuxt start",
    "generate": "nuxt generate && npm run mkDirs && npm run cpFiles",
    "mkDirs": "mkdir -p dist/nuxtStories dist/nuxtStories/svg",
    "cpFiles": "cp -rf stories/* dist/nuxtStories && cp -rf lib/assets/svg/* dist/nuxtStories/svg ",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "test": "ava --colors --watch --timeout=10m",
    "test:cov": "c8 ava --timeout=10m"
  },
  "files": [
    "lib",
    "postinstall.js",
    "stories"
  ],
  "imports": {
    "#root/*": "./*"
  },
  "dependencies": {
    "@lokidb/fs-storage": "^2.1.0",
    "@lokidb/full-text-search": "^2.1.0",
    "@lokidb/loki": "^2.1.0",
    "bootstrap": "^5.1.3",
    "bootstrap-icons": "^1.7.1",
    "buffer": "^6.0.3",
    "dompurify": "^2.3.3",
    "gently-copy": "^3.2.0",
    "glob": "^7.2.0",
    "gray-matter": "^4.0.3",
    "highlight.js": "^11.3.1",
    "les-utils": "^2.0.4",
    "marked": "^4.0.3",
    "nuxt-socket-io": "git+https://github.com/richardeschloss/nuxt-socket-io.git#feat/nuxt-edge",
    "sass": "^1.45.1",
    "sass-loader": "^12.4.0",
    "vue-json-pretty": "^1.8.2",
    "xml2js": "^0.4.23"
  },
  "devDependencies": {
    "@nuxt/bridge": "npm:@nuxt/bridge-edge@^3.0.0-27335068.804b323",
    "@nuxtjs/eslint-config": "^6.0.1",
    "c8": "^7.10.0",
    "eslint": "^7.32.0",
    "jsdom-global": "^3.0.2",
    "nuxt-edge": "^2.16.0-27338416.777a4b7f"
  }
}
